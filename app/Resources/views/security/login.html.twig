{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/loginStylesheet.css') }}" class="css">
{% endblock %}
{% block title %}Kurzy CIT - Prihlásenie{% endblock %}

{% block body %}
    {% if error %}
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="alert alert-danger" id="errorMessage">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        Zadali ste nesprávne prihlasovacie meno alebo heslo.
{#
                    {{ error.messageKey|trans(error.messageData, 'security') }}
#}
                </div>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="panel panel-default" id="panelLogin">
                <div class="panel-heading" id="panelHeading">
                    <h3 class="panel-title">Prihlásenie</h3>
                </div>
                <div class="panel-body">
                    <div class="wrapper">
                    <form action="{{ path('login') }}" method="post">
                        <div class="formElement1">
                            <label for="username" class="loginLabel">Login UK:</label>
                        </div>
                        <div class="formElement2">
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="inputBoxLogin"/>
                        </div>

                        <div class="formElement3">
                            <label for="password" class="loginLabel">Heslo:</label>
                        </div>
                        <div class="formElement4">
                            <input type="password" id="password" name="_password" class="inputBoxLogin"/>
                        </div>

                        {#
                            If you want to control the URL the user
                            is redirected to on success (more details below)
                            <input type="hidden" name="_target_path" value="/account" />
                        #}

                        <br>
                        <button type="submit" class="btn btn-default">Prihlásiť</button>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>





{% endblock %}